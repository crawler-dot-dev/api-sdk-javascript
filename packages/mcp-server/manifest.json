{
  "dxt_version": "0.2",
  "name": "crawler.dev-mcp",
  "version": "1.0.3",
  "description": "The official MCP Server for the Crawler Dev API",
  "author": {
    "name": "Crawler Dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crawler-dot-dev/api-sdk-javascript.git"
  },
  "homepage": "https://github.com/crawler-dot-dev/api-sdk-javascript/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "CRAWLER_DEV_API_KEY": "${user_config.CRAWLER_DEV_API_KEY}"
      }
    }
  },
  "user_config": {
    "CRAWLER_DEV_API_KEY": {
      "title": "api_key",
      "description": "API key required for authentication. Get your API key from the crawler.dev dashboard.",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
